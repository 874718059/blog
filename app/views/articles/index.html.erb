<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Articles" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl">Articles List</h1>
    <%= link_to "New article", new_article_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="articles" class="min-w-full">
    <table class="border-collapse table-fixed w-full text-sm">
      <thead>
        <tr>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-slate-800">
        <% @articles.each do |article| %>
          <tr>
            <td class="border-b border-slate-100 dark:border-slate-700 text-slate-500 dark:text-slate-400 border-black dark:border-slate-600 pt-3 pb-3"><%= link_to article.title, article %></td>
            <td class="border-b border-slate-100 dark:border-slate-700 text-slate-500 dark:text-slate-400 border-black dark:border-slate-600 pt-3 pb-3"><%= article.created_at.strftime("%Y-%m-%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
